{
  "name": "sync-issues-action",
  "version": "0.1.1",
  "description": "Sync GitHub PRs and issues to markdown files",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build src/index.ts -o dist --license licenses.txt",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "./src/__tests__/integration/test-action.sh",
    "test:integration:local": "./src/__tests__/integration/test-local.sh",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:integration:local",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build && npm run package"
  },
  "keywords": [
    "github",
    "actions",
    "issues",
    "prs",
    "markdown",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.1",
    "@octokit/auth-app": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^25.3.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "@vercel/ncc": "^0.38.1"
  }
}
